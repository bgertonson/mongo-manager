@model MongoManager.Models.DatabaseBrowseModel
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="span9">
        <h2>Databases</h2>
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>Database Name</th>
                    <th>Collection Count</th>
                    <th>Document Count</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.Databases)
                {
                    <tr>
                        <td>@Html.ActionLink(item.Name, "Database", "Browse", new {db = item.Name}, null)</td>
                        <td>@item.CollectionCount</td>
                        <td>@item.DocumentCount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="span3">
        <div class="well">
            <h2>Actions</h2>
        </div>
    </div>
</div>
